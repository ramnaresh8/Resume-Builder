{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2020"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "composite": true, // Required for referenced projects
    // "noEmit": true,  // Remove this line
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist" // Specify an output directory
  },
  "include": [
    "vite.config.ts"
  ]
}